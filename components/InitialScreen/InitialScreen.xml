<?xml version = "1.0" encoding = "utf-8" ?> 
<component name = "InitialScreen" extends = "Group" initialFocus="exampleKeyboard">
  <script type="text/brightscript" uri="InitialScreen.brs" />
    <script type="text/brightscript" uri="utils.brs" />
    <script type="text/brightscript" uri="SubscriptionLogic.brs" />
  <interface>
    <field id="dialog" type="node"/>
    <field id="videosArr" type="string" onChange="videosRendered"/>
    <field id="subscriptionDialog" type="string" onChange="checkSubscription"/>
    <field id="signal" type="string"/>
      <field id="content" type="node" alias="RowList.content" />
      <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected" />
      <field id="itemSelected" type="intarray" alwaysnotify="true" alias="RowList.itemSelected" />
      <field id="optionButtonSelected" type="intarray" alwaysnotify="true" alias="option.buttonSelected" />

  </interface>
  <children>

    <Label
        id="searchQuery"
        text="Trending"
        wrap="true"
        width="500"
        numLines="1"
        translation="[40,60]"
        font="font:LargeBoldSystemFont"
	  />

    <Label
        id="channelTitle"
        text=""
        wrap="true"
        width="1260"
        numLines="3"
        translation="[100,100]"
        font="font:LargeBoldSystemFont"
	  />


    <Video
      id="musicvideos"
      width="500"
      height="720"
      horizAlign = "center"
      translation="[360,0]"
      enableUi ="false"
      enableTrickPlay ="false"
    />

        <RowList
        itemComponentName="PreferencesRowListItem"
        id="rowList"
        translation="[20,20]"
        numRows="7"
        rowItemSize="[ [140, 40] ]"
        rowItemSpacing="[[10,10]]"
        itemSize="[ 1040, 50 ]"
        rowLabelOffset="[[30,10]]"
        showRowLabel="[false]"
        drawFocusFeedback="[true]"
        rowFocusAnimationStyle="floatingFocus"
        rowLabelColor="#0000FF"
        showFocusFootprint="true"
    />
      <Label
      id="loading"
      text="Loading..."
      horizAlign = "center"
      wrap="true"
      translation="[0.0, 300]"
      font="font:LargeBoldSystemFont"
    />

      <BusySpinner
      id = "busySpinner"
      visible = "false" />

      <BusySpinner
      id = "exampleBusySpinner"
      visible = "true" />


        <Button
      id="option"
      text=""
      showFocusFootprint="true"
      iconUri="pkg:/images/feed_back.png"
      focusedIconUri="pkg:/images/feed_back.png"
      translation="[1170, 10]"  
      maxwidth="90"
      minWidth="85"
      height="70"
    />

      <Button
      id = "butonUp"
      showFocusFootprint = "true"
      text=""
      iconUri="pkg:/images/up.png"
      focusedIconUri="pkg:/images/up.png"
      translation="[1170, 550 ]"  
      maxwidth="90"
      minWidth="90"
      />
      <Button
      id = "butonDown"
      showFocusFootprint = "true"
      text=""
      iconUri="pkg:/images/down.png"
      focusedIconUri="pkg:/images/down.png"
      translation="[1170,630]"
      maxwidth="90"
      minWidth="90"
      />

  </children>

</component>
